FROM textscoperegistry.azurecr.io/opencv_base_image:ubuntu20.04

ENV PYTHONPATH="$PYTHONPATH:/workspace"

RUN apt-get update && \
    apt-get install -y git && \
    apt-get -y install libgl1-mesa-glx libglib2.0-0

COPY ./ /tmp

RUN mkdir /workspace && \
    mv /tmp/kakaobank_wrapper /workspace/kakaobank_wrapper && \
    mv /tmp/app /workspace/app && \
    mv /tmp/.env /workspace/.env && \
    mv /tmp/requirments/requirments-kakaobank.txt /workspace/requirments-kakaobank.txt && \
    rm -r /tmp

RUN pip3 install --upgrade pip && \ 
    pip3 install -r /workspace/requirments-kakaobank.txt

WORKDIR /workspace
